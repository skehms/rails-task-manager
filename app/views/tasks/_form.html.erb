<div class="container">

  <div class="card">

      <%= form_for(@task) do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :details %>
        <%= f.text_field :details, class: "form-control" %>
      </div>

      <div class="form-check form-check-inline">
        <%= f.check_box :completed, class: "form-check-label" %>
        <%= f.label :completed %>
     </div>

      <br>
      <br>
      <div class="d-flex justify-content-around" >

      <%= link_to tasks_path do %>
        <i class="fas fa-undo">main page</i>
      <% end %>
      <%= f.submit "SUBMIT", class: "btn btn-outline-primary" %>

     <% end %>
  </div>

</div>
